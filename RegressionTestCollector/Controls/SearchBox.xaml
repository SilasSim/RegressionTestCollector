<UserControl x:Class="RegressionTestCollector.Controls.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RegressionTestCollector.Controls"
             xmlns:behaviors="clr-namespace:RegressionTestCollector.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
  <Grid Style="{StaticResource GridStyle}" Width="auto">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="0.15*">
      </ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid >
      <TextBox Style="{StaticResource TextBoxStyle}" 
                 x:Name="TextBox" Grid.Column="0" Padding="8" 
                 Text="{Binding SearchString, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
      <TextBlock Style="{StaticResource TextBlockStyle}" 
                   FontSize="14" Text="{Binding MatchCounter, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                   HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 25 0" Opacity="0.5"
                   behaviors:Focuser.FocusTarget="{Binding ElementName=TextBox}"></TextBlock>
    </Grid>

    <Button Style="{StaticResource ButtonStyle}" Grid.Column="1" Content="🔍" />
  </Grid>
</UserControl>
