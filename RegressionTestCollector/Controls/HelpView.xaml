<UserControl x:Class="RegressionTestCollector.Controls.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:RegressionTestCollector.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource Brush.BackgroundColor}">
  <UserControl.Resources>
    <Style TargetType="TextBlock" x:Key="HelpTextBlockStyle" BasedOn="{StaticResource TextBlockStyle}">
      <Setter Property="TextWrapping" Value="Wrap"/>
      <Setter Property="Margin" Value="10"/>
      <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style TargetType="TabItem" x:Key="TabItemStyle">
      <Setter Property="Padding" Value="6"/>
    </Style>

    <Style TargetType="ScrollViewer" x:Key="ScrollViewerStyle">
      <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
      <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
      <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
      <Setter Property="BorderThickness" Value="2 2 0 0"/>
    </Style>
  </UserControl.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
      <TextBlock Grid.Row="0" Margin="10" Text="{x:Static properties:Strings.HelpTitle}" TextWrapping="Wrap" 
                 FontSize="20"
                 Foreground="{DynamicResource Brush.ForegroundColor}"
                 HorizontalAlignment="Center">
      </TextBlock>
   
    <TabControl Grid.Row="1" Background="{DynamicResource Brush.BackgroundColor}" TabStripPlacement="Left">
      <TabItem Style="{StaticResource TabItemStyle}" Header="{x:Static properties:Strings.HelpHowToUseCommandString}">
        <ScrollViewer Style="{StaticResource ScrollViewerStyle}">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="*"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Style="{StaticResource HelpTextBlockStyle}" 
                     Text="{x:Static properties:Strings.HelpCopyingCommandStringIntroText}"/>

            <Grid Grid.Row="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>

              <ItemsControl Grid.Column="0" ItemsSource="{Binding CommandStringBulletPoints}" Margin="10">
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <BulletDecorator>
                      <BulletDecorator.Bullet>
                        <Ellipse Margin="0 10 0 0" Width="8" Height="8" Fill="{DynamicResource Brush.ForegroundColor}"/>
                      </BulletDecorator.Bullet>
                      <TextBlock Text="{Binding}" 
                             Style="{StaticResource HelpTextBlockStyle}" 
                  />
                    </BulletDecorator>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
              <Separator Grid.Column="1" Style="{StaticResource VerticalSeparatorStyle}"/>
              <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10 20 10 10" >
                <CheckBox Style="{StaticResource BasicCheckBoxStyle}"
                  Content="{x:Static properties:SearchTableString.ContextMenuSetVerbose}" 
                        IsChecked="True"/>
                <CheckBox Style="{StaticResource BasicCheckBoxStyle}"
                  Content="{x:Static properties:SearchTableString.ContextMenuSetDebug}" 
                        IsChecked="False"/>
                <Separator Style="{StaticResource SeparatorStyle}"/>
                <CheckBox Style="{StaticResource BasicCheckBoxStyle}"
                  Content="{x:Static properties:SearchTableString.ContextMenuExeInclusion}"
                        IsChecked="True"/>
                <Separator Style="{StaticResource SeparatorStyle}"/>
                <CheckBox Style="{StaticResource BasicCheckBoxStyle}"
                  Content="{x:Static properties:SearchTableString.ContextMenuRelativePath}" 
                        IsChecked="False"/>
                <CheckBox Style="{StaticResource BasicCheckBoxStyle}"
                  Content="{x:Static properties:SearchTableString.ContextMenuAbsolutePath}"
                        IsChecked="True"/>
                <Separator Style="{StaticResource SeparatorStyle}"/>
                <CheckBox Style="{StaticResource BasicCheckBoxStyle}" 
                          Content="{x:Static properties:SearchTableString.PlatformWindows}"
                        IsChecked="True"/>
                <CheckBox Style="{StaticResource BasicCheckBoxStyle}" 
                          Content="{x:Static properties:SearchTableString.PlatformLinux}"
                        IsChecked="False"/>
              </StackPanel>

            </Grid>
          </Grid>
        </ScrollViewer>
      </TabItem>
      <TabItem Style="{StaticResource TabItemStyle}" Header="{x:Static properties:Strings.HelpHowToLoadDataHeader}">
        <ScrollViewer Style="{StaticResource ScrollViewerStyle}">
          <TextBlock Style="{StaticResource HelpTextBlockStyle}"
                     Text="{x:Static properties:Strings.HelpHowToLoadData}"/>
        </ScrollViewer>
      </TabItem>
      <TabItem Style="{StaticResource TabItemStyle}" Header="{x:Static properties:Strings.HelpHowToPrepareDebugSessionHeader}">
        <ScrollViewer Style="{StaticResource ScrollViewerStyle}">
          <ItemsControl ItemsSource="{Binding HttpServerSteps}" Margin="10">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <BulletDecorator>
                  <BulletDecorator.Bullet>
                    <Ellipse Margin="0 10 0 0" Width="8" Height="8" Fill="{DynamicResource Brush.ForegroundColor}"/>
                  </BulletDecorator.Bullet>
                  <TextBlock Text="{Binding}" 
                             Style="{StaticResource HelpTextBlockStyle}" 
                             />
                </BulletDecorator>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>
      </TabItem>

      <TabItem Header="{x:Static properties:Strings.HelpCollectingStrategyHeader}">
        <ScrollViewer Style="{StaticResource ScrollViewerStyle}">
          <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
      
        <TextBlock Grid.Row="0" Style="{StaticResource HelpTextBlockStyle}" 
                   Text="{x:Static properties:Strings.HelpCollectingStrategyIntroText}"/>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding CollectingStrategyBulletPoints}" Margin="10">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <BulletDecorator>
                <BulletDecorator.Bullet>
                  <Ellipse Margin="0 10 0 0" Width="8" Height="8" Fill="{DynamicResource Brush.ForegroundColor}"/>
                </BulletDecorator.Bullet>
                <TextBlock Text="{Binding}" 
                           Style="{StaticResource HelpTextBlockStyle}" 
                />
              </BulletDecorator>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
        </Grid>
        </ScrollViewer>
      </TabItem>

    </TabControl>

  </Grid>


</UserControl>
