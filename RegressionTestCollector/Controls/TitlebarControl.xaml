<UserControl x:Class="RegressionTestCollector.Controls.TitlebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RegressionTestCollector.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800"
             MouseDown="TitlebarControl_OnMouseDown">
  <Grid Style="{StaticResource TitlebarGridStyle}">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <StackPanel Grid.Column="0" Orientation="Horizontal" FlowDirection="LeftToRight" VerticalAlignment="Center">
      <Button Style="{StaticResource TaskbarIconButtonStyle}" PreviewMouseLeftButtonDown="Control_OnMouseDoubleClick"/>
      <TextBlock x:Name="TitleText" FontSize="15" VerticalAlignment="Center" Margin="5 0 0 0" Foreground="{DynamicResource Brush.ForegroundColor}" />
    </StackPanel>
    <StackPanel Grid.Column="1" Orientation="Horizontal" FlowDirection="RightToLeft">
      <Button Content="✕" Click="ButtonClose_OnClick" Style="{StaticResource TitlebarButtonStyle}" />
      <Button Content="▢" Click="ButtonMaximize_OnClick" Style="{StaticResource TitlebarButtonStyle}" />
      <Button Content="━" Click="ButtonMinimize_OnClick" Style="{StaticResource TitlebarButtonStyle}" />
    </StackPanel>
  </Grid>
</UserControl>
